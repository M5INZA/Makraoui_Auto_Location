<UserControl x:Class="Makraoui_Auto_Location.View.CarsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Makraoui_Auto_Location.Models">

    <Grid Background="#FFF5F5F5">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
            <RowDefinition Height="Auto"/>
            <!-- Form -->
            <RowDefinition Height="*"/>
            <!-- Vehicles -->
        </Grid.RowDefinitions>

        <!-- ===================== ACTION BUTTONS ===================== -->
        <WrapPanel Grid.Row="0"
                   Background="#FFE0EEFF"
                   HorizontalAlignment="Center"
                   Margin="0,6">
            <Button Content="Add Vehicle" Width="140" Height="40" Margin="5"/>
            <Button Content="Edit" Width="140" Height="40" Margin="5"/>
            <Button Content="Save" Width="140" Height="40" Margin="5"/>
            <Button Content="Cancel" Width="140" Height="40" Margin="5"/>
            <Button Content="Delete" Width="140" Height="40" Margin="5"/>
        </WrapPanel>

        <!-- ===================== VEHICLE FORM ===================== -->
        <Border Grid.Row="1"
                Margin="15"
                Padding="15"
                Background="White"
                CornerRadius="8">

            <StackPanel>
                <TextBlock Text="Vehicle Information"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,12"/>

                <UniformGrid Columns="5" Rows="2">

                    <StackPanel Margin="5">
                        <TextBlock Text="Plate Number"/>
                        <TextBox Height="28"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Brand"/>
                        <TextBox Height="28"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Model"/>
                        <TextBox Height="28"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Year"/>
                        <TextBox Height="28"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Color"/>
                        <TextBox Height="28"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Status"/>
                        <ComboBox Height="28"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Transmission"/>
                        <ComboBox Height="28"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Engine"/>
                        <TextBox Height="28"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Price / Day"/>
                        <TextBox Height="28"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Stock Number"/>
                        <TextBox Height="28"/>
                    </StackPanel>

                </UniformGrid>


            </StackPanel>
        </Border>

        <!-- ===================== VEHICLES LIST ===================== -->
        <ScrollViewer Grid.Row="2"
                      Margin="15"
                      VerticalScrollBarVisibility="Auto">

            <ItemsControl>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="200"
                    Margin="8"
                    Padding="8"
                    Background="White"
                    CornerRadius="6"
                    BorderBrush="#CCC"
                    BorderThickness="1">

                            <StackPanel>
                                <TextBlock Text="{Binding Plate}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text="{Binding Year}"/>

                                <TextBlock Text="{Binding Price}"
                               FontWeight="Bold"
                               Margin="0,6"/>

                                <Border Height="100"
                            Background="#EEE"
                            CornerRadius="4">
                                    <TextBlock Text="Photo"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <!-- TEST DATA -->
                <ItemsControl.Items>
                    <local:Vehicle Plate="G-76-87" Name="Ford Mustang" Year="2006" Price="125 MAD"/>
                    <local:Vehicle Plate="H-45-65" Name="Toyota Corolla" Year="2004" Price="90 MAD"/>
                    <local:Vehicle Plate="R-65-39" Name="Mitsubishi Lancer" Year="2003" Price="80 MAD"/>
                    <local:Vehicle Plate="V-98-21" Name="Kia Rio" Year="2005" Price="70 MAD"/>
                    <local:Vehicle Plate="G-45-34" Name="BMW X5" Year="2008" Price="150 MAD"/>
                </ItemsControl.Items>
            </ItemsControl>

        </ScrollViewer>

    </Grid>
</UserControl>
