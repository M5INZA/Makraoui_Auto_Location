<Window x:Class="Makraoui_Auto_Location.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Rental System"
        WindowState="Maximized"
        MinWidth="1024"
        MinHeight="700">

    <Grid Background="#FFF5F5F5">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- MENU -->
        <WrapPanel Grid.Row="0"
                   Background="#FFE0EEFF"
                   HorizontalAlignment="Center"
                   Margin="0,6">
            <Button Content="Dashboard" Width="140" Height="40" Margin="5"/>
            <Button Content="Client" Width="140" Height="40" Margin="5"/>
            <Button Content="Cars" Width="140" Height="40" Margin="5"/>
        </WrapPanel>

        <!-- PAGE CONTENT -->
        <ContentControl x:Name="MainContent"
                        Grid.Row="1" Background="#FFF70000"/>

    </Grid>
</Window>
